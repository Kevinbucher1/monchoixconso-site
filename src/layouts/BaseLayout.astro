---
import Footer from '../components/Footer.astro';

// Astro.props permet de recevoir des données depuis la page qui utilise ce layout
const { pageTitle } = Astro.props;
---
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle} | monchoixconso.com</title>
</head>
<body>
    <main>
        <slot />
    </main>
    <Footer />
</body>
</html>
<style is:global>
    /* Styles globaux */
    body {
        font-family: system-ui, sans-serif;
        margin: 0;
    }
    
    /* === MODIFICATION === */
    /* La règle pour "main" a été supprimée pour permettre la pleine largeur. */
    /* Le style est maintenant géré par le HTML qui vient de Strapi. */

</style>